@model IEnumerable<CRUD_AJAX.Models.DomainModels.Employee>


<a onclick="showInPopup('@Url.Action("AddEmployee", "Employee", null, Context.Request.Scheme)', 'New Employee')" class="btn btn-success btn-sm"><i class="fa-solid fa-plus"></i> Add Employee</a> @*showInPopup(url(action, controller, id, protocol), title)*@

<table class="table table-bordered mt-3 text-center">
    <thead>
        <tr class="bg-warning">
            <th>Employee Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Salary</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach(var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.Name</td>
                    <td>@employee.Address</td>
                    <td>@employee.salary</td>
                    <td>@employee.Department</td>
                    <td>
                        <a onclick="showInPopup('@Url.Action("EditEmployee", "Employee", new {id = employee.EmployeeId }, Context.Request.Scheme)', 'Edit Employee')" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                        <form class="d-inline" asp-action="DeleteEmployee" asp-controller="Employee" asp-route-id="@employee.EmployeeId" method="post" onsubmit="return jQueryAJAXDelete(this);">
                            <button type="submit" class="btn btn-danger btn-sm"><i class="fa-regular fa-trash-can"></i> Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>